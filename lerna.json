{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org",
      "verifyAccess": false,
      "yes": true,
      "npmClient": "npm",
      "allowBranch": "main",
      "ignoreChanges": ["*.md", "*/test/*"]
    }
  },
  "npmClient": "yarn",
  "packages": ["configs/*", "eslint/*"],
  "useNx": true,
  "version": "independent"
}
