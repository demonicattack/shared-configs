{
  "name": "@demonicattack/shared-configs",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "configs/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt run build",
    "cache:clean": "yarn cache clean --all && rm -rf .yarn/cache .yarn/__virtual__ .yarn/berry",
    "check-types": "yarn workspaces foreach -Apt run tsc --noEmit",
    "clean": "yarn workspaces foreach -Apt run clean",
    "clean:all": "yarn run clean && yarn run cache:clean",
    "doctor": "yarn dlx @yarnpkg/doctor@latest",
    "format": "yarn workspaces foreach -Apt run prettier --check . --cache --cache-location .yarn/cache/.prettiercache",
    "format:fix": "yarn workspaces foreach -Apt run prettier --write . --cache --cache-location .yarn/cache/.prettiercache --log-level=warn",
    "lint": "yarn workspaces foreach -Apt run eslint --cache --cache-location .yarn/cache/.eslintcache",
    "lint:fix": "yarn workspaces foreach -Apt run eslint --fix --cache --cache-location .yarn/cache/.eslintcache",
    "lint:ws": "yarn dlx sherif@latest",
    "prepare": "husky",
    "sdk": "yarn dlx @yarnpkg/sdks@latest",
    "yarn:focus:all": "yarn workspaces focus -A",
    "yarn:workspace:list": "yarn workspaces list -R -v --json --no-private"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": "./prettier.config.js",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "19.5.0",
    "@demonicattack/lint-staged": "workspace:^",
    "@demonicattack/prettier": "workspace:^",
    "@demonicattack/typescript": "workspace:^",
    "@eslint/js": "^9.13.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "inquirer": "^12.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "packageManager": "yarn@4.5.1",
  "engines": {
    "node": ">=18.20.4",
    "yarn": ">=4.5.1"
  }
}
