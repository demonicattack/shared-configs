{
  "name": "@demonicattack/shared-configs",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "configs/*",
    "configs/plugins/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt run build",
    "build:workspaces:clean": "yarn workspaces foreach -Apt run build:clean",
    "cache:clean": "yarn cache clean --all && rm -rf .yarn/cache .yarn/__virtual__ .yarn/berry ./.pnp.cjs ./.pnp.loader.mjs .yarn node_modules",
    "check-types": "yarn workspaces foreach -Apt run tsc --noEmit",
    "clean:all": "yarn run build:workspaces:clean && yarn run clean:workspaces:cache && yarn run cache:clean",
    "clean:workspaces:cache": "yarn workspaces foreach -Apt run clean",
    "dev": "yarn workspace @demonicattack/eslint run dev",
    "doctor": "yarn dlx @yarnpkg/doctor@latest",
    "format": "yarn workspaces foreach -Apt run prettier --check . --cache --cache-location .yarn/cache/.prettiercache",
    "format:fix": "yarn workspaces foreach -Apt run prettier --write . --cache --cache-location .yarn/cache/.prettiercache --log-level=warn",
    "lint": "yarn workspaces foreach -Apt run eslint --cache --cache-location .yarn/cache/.eslintcache",
    "lint:fix": "yarn workspaces foreach -Apt run eslint --fix --cache --cache-location .yarn/cache/.eslintcache",
    "lint:ws": "yarn dlx sherif@latest -r packages-without-package-json",
    "prepare": "husky",
    "sdk": "yarn dlx @yarnpkg/sdks@latest vscode",
    "yarn:focus:all": "yarn workspaces focus -A",
    "yarn:workspace:list": "yarn workspaces list -R -v --json --no-private"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "19.5.0",
    "@demonicattack/eslint": "workspace:^",
    "@demonicattack/lint-staged": "workspace:^",
    "@demonicattack/prettier": "workspace:^",
    "@demonicattack/typescript": "workspace:^",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=18.20.4",
    "yarn": ">=4.5.3"
  }
}
