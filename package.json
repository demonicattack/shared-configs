{
  "name": "@demonicattack/shared-configs",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "configs/*",
    "eslint/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt --exclude @demonicattack/typescript run build",
    "build:workspaces:clean": "yarn workspaces foreach -Apt --exclude @demonicattack/typescript run build:clean",
    "cache:clean": "yarn cache clean --all && rm -rf .yarn/cache .yarn/__virtual__ .yarn/berry ./.pnp.cjs ./.pnp.loader.mjs .yarn node_modules yarn.lock",
    "check-types": "yarn workspaces foreach -Apt --exclude @demonicattack/typescript run check-types",
    "clean:all": "yarn run build:workspaces:clean && yarn run clean:workspaces:cache && yarn run cache:clean",
    "clean:workspaces:cache": "yarn workspaces foreach -Apt run clean",
    "format": "yarn workspaces foreach -Apt run format",
    "format:fix": "yarn workspaces foreach -Apt run format:fix",
    "lint": "yarn workspaces foreach -Apt --exclude @demonicattack/typescript run lint",
    "lint:fix": "yarn workspaces foreach -Apt --exclude @demonicattack/typescript run lint:fix",
    "lint:ws": "yarn dlx sherif@latest -r packages-without-package-json",
    "prepare": "husky",
    "yarn:workspace:list": "yarn workspaces list -R -v --json --no-private"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "19.5.0",
    "@demonicattack/eslint": "workspace:^",
    "@demonicattack/lint-staged": "workspace:^",
    "@demonicattack/prettier": "workspace:^",
    "@demonicattack/typescript": "workspace:^",
    "commitizen": "^4.3.1",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=18.20.4",
    "yarn": ">=4.5.3"
  }
}
